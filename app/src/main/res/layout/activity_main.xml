<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageViewLogoBackdround"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/circle"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/imageViewLogoNote"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="88dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_music_note_24"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="102dp"
        android:layout_height="37dp"
        android:layout_marginTop="62dp"
        android:background="#0B0A0A"
        android:text="My Song"
        android:textColor="@color/purple_500"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLogoBackdround"
        app:layout_constraintVertical_bias="0.045" />

    <SeekBar
        android:id="@+id/volumeSeekBar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="74dp"
        android:layout_marginBottom="261dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/imageViewPlayBackground"
        android:onClick="play"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.924"
        app:srcCompat="@drawable/circle"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/imageViewPlayIcon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewPlayBackground"
        app:layout_constraintEnd_toEndOf="@+id/imageViewPlayBackground"
        app:layout_constraintStart_toStartOf="@+id/imageViewPlayBackground"
        app:layout_constraintTop_toTopOf="@+id/imageViewPlayBackground"
        app:srcCompat="@drawable/ic_baseline_play_arrow_24"
        tools:ignore="VectorDrawableCompat"/>

    <ImageView
        android:id="@+id/imageViewNextBackground"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:onClick="next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.841"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.923"
        app:srcCompat="@drawable/circle"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/imageViewNextIcon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewNextBackground"
        app:layout_constraintEnd_toEndOf="@+id/imageViewNextBackground"
        app:layout_constraintStart_toStartOf="@+id/imageViewNextBackground"
        app:layout_constraintTop_toTopOf="@+id/imageViewNextBackground"
        app:srcCompat="@drawable/ic_baseline_skip_next_24"
        tools:ignore="VectorDrawableCompat"/>

    <ImageView
        android:id="@+id/imageViewPreviousBackground"
        android:onClick="previous"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.158"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.921"
        app:srcCompat="@drawable/circle"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/imageViewPreviousIcon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewPreviousBackground"
        app:layout_constraintEnd_toEndOf="@+id/imageViewPreviousBackground"
        app:layout_constraintStart_toStartOf="@+id/imageViewPreviousBackground"
        app:layout_constraintTop_toTopOf="@+id/imageViewPreviousBackground"
        app:srcCompat="@drawable/ic_baseline_skip_previous_24"
        tools:ignore="VectorDrawableCompat"/>


</androidx.constraintlayout.widget.ConstraintLayout>